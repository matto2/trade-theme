<style>
  .new-partner-logos-section {
    padding: 1.2rem 0;
  }

  .new-partner-logos-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .new-partner-logos-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 4rem;
    align-items: center;
  }

  .new-partner-logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 8rem;
  }

  .logo-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .new-partner-logo-item img {
    max-width: 100%;
    max-height: 6rem;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .logo-wrapper .full-unstyled-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-decoration: none;
    color: transparent;
    display: block;
  }

  .logo-wrapper:hover {
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  @media screen and (max-width: 749px) {
    .new-partner-logos-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }

    .new-partner-logo-item {
      min-height: 6rem;
    }

    .new-partner-logo-item img {
      max-height: 4rem;
    }
  }

  @media screen and (min-width: 750px) {
    .new-partner-logos-container {
      padding: 0 5rem;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .new-partner-logos-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<div class="new-partner-logos-section color-{{ section.settings.color_scheme }}">
  <div class="new-partner-logos-container">
    <div class="new-partner-logos-grid">
      {%- for block in section.blocks -%}
        <div class="new-partner-logo-item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="logo-wrapper">
              <img
                src="{{ block.settings.image | image_url: width: 300 }}"
                alt="{{ block.settings.image.alt | default: 'Partner logo' }}"
                loading="lazy"
              >
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="full-unstyled-link" aria-label="Visit {{ block.settings.image.alt | default: 'partner' }} collection"></a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

