<div class="test-product-section">
  <h2>Test Product Section</h2>

  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'test_text' -%}
        <div class="test-block" {{ block.shopify_attributes }}>
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.content }}</p>
        </div>
      {%- when 'simple_contact' -%}
        <div class="simple-contact" {{ block.shopify_attributes }}>
          <h3>Contact Form</h3>
          <p>This would be a contact form</p>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Test Product Section",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "test_text",
      "name": "Test Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Test Heading"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Test content goes here"
        }
      ]
    },
    {
      "type": "simple_contact",
      "name": "Simple Contact",
      "settings": []
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Test Section"
    }
  ],
  "presets": [
    {
      "name": "Test Product Section",
      "blocks": [
        {
          "type": "test_text"
        }
      ]
    }
  ]
}
{% endschema %}